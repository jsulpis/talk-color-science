---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
	width?: number;
	height?: number;
	strokeWidth?: number;
	tip: "left" | "right" | "both";
}

const {
	width = 250,
	height = 25,
	strokeWidth = height / 7,
	tip = "both",
	...attrs
} = Astro.props;

const pathLeft =
	tip === "left" || tip === "both"
		? `M${height / 2} ${height - strokeWidth / 2}L${strokeWidth / 2} ${height / 2}L${height / 2} ${strokeWidth / 2}`
		: "";
const pathRight =
	tip === "right" || tip === "both"
		? `M${width - height / 2} ${height - strokeWidth / 2}L${width - strokeWidth / 2} ${height / 2}L${width - height / 2} ${strokeWidth / 2}`
		: "";
---

<svg
	width={width}
	height={height}
	viewBox={`0 0 ${width} ${height}`}
	fill="none"
	xmlns="http://www.w3.org/2000/svg"
	{...attrs}
>
	<path
		d={`M${strokeWidth} ${height / 2}H${width - strokeWidth}`}
		stroke="currentColor"
		stroke-width={strokeWidth}
		stroke-linecap="round"
		stroke-linejoin="round"></path>
	<path
		d={`${pathLeft}${pathRight}`}
		stroke="currentColor"
		stroke-width={strokeWidth}
		stroke-linecap="round"
		stroke-linejoin="round"></path>
</svg>

<style>
	svg {
		width: 100%;
		height: auto;
	}
</style>
