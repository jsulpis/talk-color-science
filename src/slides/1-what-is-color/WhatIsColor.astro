---
import Slide from "../../components/Slide.astro";
import Cells from "./Cells.astro";
import LMS from "./cones/LMS.svelte";
import Waves from "./waves/WaveLambda.svelte";
import SPD from "./spd/SPD.svelte";
import CellsBrain from "./CellsBrain.astro";
import WaveIntensity from "./waves/WaveIntensity.svelte";
import ColorDefinition from "./ColorDefinition.astro";
import WaveSuperposition from "./waves/WaveSuperposition.svelte";
import MonochromaticWaveCanvas from "./waves/MonochromaticWaveCanvas.svelte";
---

<Slide>
	<h1>Qu'est-ce que la couleur ?</h1>
</Slide>

<Slide>
	<Waves client:visible />
</Slide>

<Slide>
	<Cells />
</Slide>

<Slide>
	<LMS client:visible />
</Slide>

<Slide>
	<CellsBrain />
</Slide>

<Slide>
	<SPD client:visible mode={1} />
</Slide>

<Slide>
	<WaveIntensity client:visible />
</Slide>

<Slide>
	<h2>C'est quoi le blanc ?</h2>
</Slide>

<Slide>
	<MonochromaticWaveCanvas frequency={5} client:visible style="width: 1000px" />
</Slide>

<Slide>
	<WaveSuperposition client:visible />
</Slide>

<Slide>
	<SPD client:visible mode={4} />
</Slide>

<Slide>
	<SPD client:visible mode={2} />
</Slide>

<Slide>
	<SPD client:visible mode={3} />
</Slide>

<Slide>
	<ColorDefinition />
</Slide>
