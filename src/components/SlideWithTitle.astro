---
import Slide from "./Slide.astro";

interface Props {
	background: string;
}
const { background } = Astro.props;
---

<Slide class="section">
	<div class="background" style={`background-image: url(${background});`}>
		<h2><slot /></h2>
	</div>
</Slide>

<style lang="scss">
	.background {
		height: 100dvh;
		background-size: cover;
		display: grid;
		place-items: center;
		filter: hue-rotate(20deg);
		background-color: rgba(0 0 0 / 0.7);
		background-blend-mode: overlay, normal;
		box-shadow: inset 0 0 20vmin rgba(0 0 0 / 0.6);
	}
	h2 {
		padding-bottom: 0.5em;
		font-size: 5rem;
		text-shadow:
			0 0 2dvh black,
			0 0 15dvh black;
	}
</style>
