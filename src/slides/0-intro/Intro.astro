---
import Slide from "../../components/Slide.astro";
import ColorMix from "./ColorMix.svelte";
import child from "./assets/child.webp";
import meme from "./assets/qui-s-en-fout.webp";
import recording from "./assets/recording.mov";
import framesVideo from "./assets/frames-video.png";
import Question from "../../components/Question.astro";
import Title from "./Title.astro";
import IssuesWithRgb from "./IssuesWithRgb.astro";
---

<Title />

<Slide>
	<Question>C'est quoi la couleur ?</Question>
</Slide>

<Slide data-background-image={child.src} />

<Slide>
	<ColorMix client:visible />
</Slide>

<Slide data-background-image={meme.src} />

<Slide>
	<IssuesWithRgb />
</Slide>

<Slide
	data-background-video={recording}
	data-background-video-loop
	data-background-size="contain"
>
	<img data-src={framesVideo.src} data-autoplay />
</Slide>

<style lang="scss">
	img {
		display: block;
		margin: auto;
		height: 100dvh;
		object-fit: contain;
	}
</style>
