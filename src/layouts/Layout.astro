---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/slides-template/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
	</head>

	<body>
		<slot />

		<script>
			import Reveal from "reveal.js";
			import RevealHighlight from "reveal.js/plugin/highlight/highlight";

			Reveal.initialize({
				transition: "none",
				history: true,
				progress: false,
				controls: false,
				autoAnimateDuration: 0.5,
				transitionSpeed: "fast", // for slide backgrounds
				autoAnimateEasing: "cubic-bezier(0.4, 0, 0.2, 1)",
				width: "100%",
				height: "100%",
				margin: 0,
				plugins: [RevealHighlight],
			});
		</script>
	</body>
</html>

<style is:global lang="scss">
	@import "reveal.js/dist/reveal.css";
	@import "reveal.js/dist/theme/night.css";
	@import "../../src/styles/highlightjs-theme-vs2015.css";

	:root {
		--r-background-color: black;
		--ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
	}

	.picker.rgb .IroSlider:nth-of-type(1) .IroSliderGradient {
		background: linear-gradient(
			to top,
			rgb(0, 0, 0) 0%,
			rgb(255, 0, 0) 100%
		) !important;
	}

	.picker.rgb .IroSlider:nth-of-type(2) .IroSliderGradient {
		background: linear-gradient(
			to top,
			rgb(0, 0, 0) 0%,
			rgb(0, 255, 0) 100%
		) !important;
	}

	.picker.rgb .IroSlider:nth-of-type(3) .IroSliderGradient {
		background: linear-gradient(
			to top,
			rgb(0, 0, 0) 0%,
			rgb(0, 0, 255) 100%
		) !important;
	}

	.reveal img {
		max-width: 100%;
		max-height: 100%;
		margin: 0;
	}

	canvas {
		opacity: 0;

		&.loaded {
			opacity: 1;
			transition: opacity 0.2s ease-out;
		}
	}
</style>
